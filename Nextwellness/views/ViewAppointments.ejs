    <script>
        // Load total rows count from local storage or initialize to 0 if not present
        var totalRows = parseInt(localStorage.getItem('totalRows')) || 0;

        // Update total rows count function
        function updateTotalRows() {
            totalRows = document.querySelectorAll('#dataTable tbody tr').length;
            localStorage.setItem('totalRows', totalRows);
            updateConsultationTotalRowCount(totalRows); // Update consultation total row count as well
        }

        // Function to remove row
        function removeRow(button) {
            var row = button.parentNode.parentNode; // Get the parent row of the button
            row.parentNode.removeChild(row); // Remove the row from the table
            updateTotalRows(); // Update total rows count
        }

        // Update total rows count on page load
        window.onload = function() {
            updateTotalRows();
            updateConsultationTotalRowCount(totalRows); // Update consultation total row count on page load
        };

        // Update consultation total row count function
        function updateConsultationTotalRowCount(totalRows) {
            localStorage.setItem('totalConsultationRowCount', totalRows);
        }

        // Listen for changes in total rows count
        window.addEventListener('storage', function(event) {
            if (event.key === 'totalRows') {
                totalRows = parseInt(event.newValue);
                updateConsultationTotalRowCount(totalRows);
            }
        });
    </script>  
