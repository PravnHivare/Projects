            <tbody>
                <% data2.forEach(item => { %>
                    <tr>
                        <td><span class="editable"><%= item.Productname %></span><input type="text" class="edit-input" value="<%= item.Productname %>" readonly></td>
                        <td><span class="editable"><%= item.specification%></span><input type="text" class="edit-input contact-number-input" value="<%= item.specification %>"></td>
                        <td>
                            <%if(item.ProductImage){%>
                            <span class="editable"><img src="/Images/<%= item.ProductImage%>"alt="Product Image" width="100px"></span>
                        <%}else{%>
                            <span class="editable"><img src="/Images/<%= item.no-img.png%>"alt="Product Image" width="100px"></span>
                        <%}%>
                        <input type="file" class="edit-input contact-number-input" name="ProductImage">
                        </td>
                        <td><span class="editable"><%= item.ProductPrice%></span><input type="Number" class="edit-input" value="<%= item.ProductPrice %>"></td>
                        <td><span class="editable"><%= item.ProductDescription%></span><input type="text" class="edit-input" value="<%= item.ProductDescription %>"></td>
                        <td>
                            <button class="btn btn-success edit-btn" style="background-color: skyblue;">Edit</button>
                            <button class="btn btn-success save-btn" style="display: none; background-color: green;" type="submit">Save</button>
    
                        </td>       
                        <td>
                            <form style="display: inline;" action="/add-product/delete/<%= item.Productname %>" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button style="cursor: pointer; background-color: red;" type="submit" class="btn btn-success ml-2">Delete</button>
                            </form>
                        </td>
                        <!-- Add more columns as needed -->
                    </tr>
                <% }); %>
            </tbody>
